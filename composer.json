{
  "name": "bwibrew/laravel-sitesettings",
  "description": "Persistent site settings for Laravel 5.4",
  "keywords": [
    "laravel",
    "cms",
    "settings"
  ],
  "authors": [
    {
      "name": "Benjamin Wibrew",
      "email": "benjamin.wibrew@gmail.com",
      "homepage": "http://benjaminwibrew.com"
    }
  ],
  "license": "MIT",
  "type": "library",
  "require": {
    "php": ">=7.0",
    "illuminate/support": "^5.4",
    "illuminate/database": "^5.4"
  },
  "require-dev": {
    "codacy/coverage": "^1.4",
    "fzaninotto/faker": "^1.6",
    "league/flysystem": "~1.0.8",
    "mockery/mockery": "^0.9.9",
    "orchestra/testbench": "^3.4.12",
    "phpmd/phpmd": "^2.6",
    "phpunit/phpunit": "^5.7.27 || ^6.5 || ^7.1",
    "spatie/laravel-medialibrary": "5.* || 6.*",
    "squizlabs/php_codesniffer": "^3.0",
    "symfony/thanks": "^1.0"
  },
  "suggest": {
    "spatie/laravel-medialibrary": "Allows files to be uploaded and associated with settings."
  },
  "autoload": {
    "psr-4": {
      "BWibrew\\SiteSettings\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BWibrew\\SiteSettings\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "BWibrew\\SiteSettings\\SiteSettingsServiceProvider"
      ]
    }
  },
  "scripts": {
    "test" : [
      "vendor/bin/phpcs",
      "vendor/bin/phpmd . text phpmd.xml",
      "vendor/bin/phpunit"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
