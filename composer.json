{
  "name": "bwibrew/laravel-sitesettings",
  "description": "Persistent site settings for Laravel 5.4",
  "keywords": [
    "laravel",
    "cms",
    "settings"
  ],
  "authors": [
    {
      "name": "Benjamin Wibrew",
      "email": "benjamin.wibrew@gmail.com",
      "homepage": "http://benjaminwibrew.com"
    }
  ],
  "license": "MIT",
  "type": "library",
  "require": {
    "php": ">=7.0",
    "illuminate/support": "^5.4",
    "illuminate/database": "^5.4",
    "league/flysystem": "~1.0.8",
    "spatie/laravel-medialibrary": "^5.13"
  },
  "require-dev": {
    "fzaninotto/faker": "^1.6",
    "mockery/mockery": "^0.9.9",
    "orchestra/database": "^3.4",
    "orchestra/testbench": "^3.4.5",
    "phpunit/phpunit": "^5.7",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "BWibrew\\SiteSettings\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BWibrew\\SiteSettings\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test" : [
      "vendor/bin/phpcs",
      "vendor/bin/phpunit"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
